# Summit Cap Financial -- environment configuration
# Copy to .env and adjust values for your local setup.

# -- Database (Postgres container) --
POSTGRES_DB=summit-cap
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# -- Database (application connection) --
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/summit-cap

# -- API --
DEBUG=false
ALLOWED_HOSTS=["http://localhost:5173"]

# -- Auth --
# Set to true to bypass JWT validation (local dev without Keycloak)
AUTH_DISABLED=true

# -- UI --
VITE_API_BASE_URL=http://localhost:8000
VITE_ENVIRONMENT=development
